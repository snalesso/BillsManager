<Window
    x:Class="Billy.UI.Wpf.Presentation.MaterialDesignWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaterialDesginThemes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Billy.UI.Wpf.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaterialDesginThemes:ButtonAssist.CornerRadius="0"
    MaterialDesginThemes:RippleAssist.IsDisabled="True"
    MaterialDesginThemes:ShadowAssist.ShadowDepth="Depth0"
    MaterialDesginThemes:ShadowAssist.ShadowEdges="None"
    Background="{StaticResource MaterialDesignPaper}"
    FontFamily="{MaterialDesginThemes:MaterialDesignFont}"
    TextElement.Foreground="{StaticResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    UseLayoutRounding="True"
    mc:Ignorable="d" />
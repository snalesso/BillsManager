        <TextBox
            Grid.Row="12"
            Grid.Column="7"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding AddressEditorViewModel.Country}" />

        <TextBlock
            Grid.Row="14"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Street" />
        <TextBox
            Grid.Row="14"
            Grid.Column="3"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding AddressEditorViewModel.Street}" />

        <TextBlock
            Grid.Row="14"
            Grid.Column="5"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Number" />
        <TextBox
            Grid.Row="14"
            Grid.Column="7"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding AddressEditorViewModel.Number}" />

        <TextBlock
            Grid.Row="17"
            Grid.Column="1"
            Grid.ColumnSpan="7"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="Contacts" />

        <TextBlock
            Grid.Row="19"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="AgentName" />
        <TextBox
            Grid.Row="19"
            Grid.Column="3"
            Text="{Binding AgentEditorViewModel.Name}" />

        <TextBlock
            Grid.Row="19"
            Grid.Column="5"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="AgentSurname" />
        <TextBox
            Grid.Row="19"
            Grid.Column="7"
            Text="{Binding AgentEditorViewModel.Surname}" />

        <TextBlock
            Grid.Row="21"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="AgentPhone" />
        <TextBox
            Grid.Row="21"
            Grid.Column="3"
            Text="{Binding AgentEditorViewModel.Phone}" />

        <TextBlock
            Grid.Row="25"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Phone" />
        <TextBox
            Grid.Row="25"
            Grid.Column="3"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding Phone}" />

        <TextBlock
            Grid.Row="25"
            Grid.Column="5"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Fax" />
        <TextBox
            Grid.Row="25"
            Grid.Column="7"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding Fax, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="27"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Email" />
        <TextBox
            Grid.Row="27"
            Grid.Column="3"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding Email}" />



        <!--  Address  -->
        <TextBlock
            Grid.Row="27"
            Grid.Column="5"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Website" />
        <TextBox
            Grid.Row="27"
            Grid.Column="7"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding Website}" />


    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="{StaticResource MaterialDesignPaper}"
    d:DataContext="{d:DesignInstance Type=Billing_ViewModels:SupplierEditorViewModel,
                                     IsDesignTimeCreatable=False}"
    d:TextElement.Foreground="{StaticResource MaterialDesignBody}"
    mc:Ignorable="d">

    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="18" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="18" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="18" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" SharedSizeGroup="row" />
            <!--<RowDefinition Height="16" />
            <RowDefinition Height="Auto" />-->
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" MinWidth="150" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" MinWidth="150" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>

        <!--  Details  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="7"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="Details" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Name" />
        <TextBox
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding Name}" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Notes" />
        <TextBox
            Grid.Row="5"
            Grid.Column="3"
            Grid.ColumnSpan="5"
            Height="48"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            HorizontalScrollBarVisibility="Disabled"
            Text="{Binding Notes}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <TextBlock
            Grid.Row="8"
            Grid.Column="1"
            Grid.ColumnSpan="7"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="Address" />

        <!--  Contacts  -->
        <TextBlock
            Grid.Row="10"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="City" />
        <TextBox
            Grid.Row="10"
            Grid.Column="3"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{Binding AddressEditorViewModel.City}" />

        <TextBlock
            Grid.Row="10"
            Grid.Column="5"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="ZIP" />
        <TextBox
            Grid.Row="10"
            Grid.Column="7"
            VerticalAlignment="Center"
            MaxLength="5"
            MaxLines="1"
            Text="{Binding AddressEditorViewModel.Zip}" />



        <TextBlock
            Grid.Row="12"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Province" />
        <TextBox
            Grid.Row="12"
            Grid.Column="3"
            VerticalAlignment="Center"
            MaxLength="2"
            MaxLines="1"
            Text="{Binding AddressEditorViewModel.Province}" />

        <TextBlock
            Grid.Row="12"
            Grid.Column="5"
            Margin="25,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="Country" />
        <!--  Agents  -->
        <!--
            <TextBlock Grid.Column="1"
            Grid.ColumnSpan="7"

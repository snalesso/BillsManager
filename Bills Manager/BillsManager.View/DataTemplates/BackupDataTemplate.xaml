<UserControl x:Class="BillsManager.View.DataTemplates.BackupDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:BillsManager.ViewModel;assembly=BillsManager.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=ViewModel:BackupViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   Text="{Binding Path=CreationTime, StringFormat=\{0:F\}, Mode=OneTime}" />

        <TextBlock Grid.Column="1"
                   Grid.Row="3">
            <Run Text="{Binding Path=SuppliersCount, Mode=OneTime}" />
            <Run Text=" suppliers" />
        </TextBlock>

        <TextBlock Grid.Column="1"
                   Grid.Row="5">
            <Run Text="{Binding Path=BillsCount, Mode=OneTime}" />
            <Run Text=" bills" />
        </TextBlock>

        <TextBlock Grid.Column="1"
                   Grid.Row="7">
            <Run Text="Used " />
            <Run Text="{Binding Path=TimesUsedForRollback, Mode=OneTime}" />
            <Run Text=" times to restore" />
        </TextBlock>

    </Grid>
</UserControl>

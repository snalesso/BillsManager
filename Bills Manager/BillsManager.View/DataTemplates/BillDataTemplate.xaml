<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:BillsManager.ViewModel;assembly=BillsManager.ViewModel"
             xmlns:cal="http://www.caliburnproject.org"
             x:Class="BillsManager.View.DataTemplates.BillDataTemplate"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type ViewModel:BillDetailsViewModel}}" >

    <UserControl.Resources>
        <ResourceDictionary Source="/BillsManager.View;component/Dictionaries/Styles.xaml" />
    </UserControl.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto"
                              SharedSizeGroup="col1" />
            <ColumnDefinition Width="42" />
            <ColumnDefinition Width="Auto"
                              SharedSizeGroup="col3" />
            <ColumnDefinition Width="42" />
            <ColumnDefinition Width="Auto"
                              SharedSizeGroup="col5" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Path=Supplier.Name}"
                   HorizontalAlignment="Left"
                   Grid.Column="1"
                   Grid.Row="1" />

        <TextBlock Text="{Binding Path=Code}"
                   HorizontalAlignment="Left"
                   Grid.Row="1"
                   Grid.Column="3" />

        <TextBlock Text="{Binding Path=Amount, StringFormat=\{0:c\}}"
                   Grid.Column="5"
                   Grid.Row="1"
                   Language="it-IT" />
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="5">
            <TextBlock Visibility="{Binding IsNotPaid, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Run Text="{Binding DuesIn, Mode=OneWay}" />
                <Run Text=" " />
                <Run Text="{Binding DueDate, Mode=OneWay, StringFormat=(\{0:dddd dd/MM/yy\})}" />
            </TextBlock>
            <TextBlock Visibility="{Binding IsPaid, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Run Text="Payed" />
                <Run Text=" " />
                <Run Text="{Binding PaymentDate, StringFormat=\{0:ddddd dd/MM/yy\}}" />
            </TextBlock>
        </StackPanel>

        <!--<TextBlock Grid.Row="3"
                   Grid.Column="1"
                   Grid.ColumnSpan="5"
                   MaxWidth="230"
                   Text="{Binding Path=Notes}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   TextTrimming="CharacterEllipsis" />-->
    </Grid>
</UserControl>
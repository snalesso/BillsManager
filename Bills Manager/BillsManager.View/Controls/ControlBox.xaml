<UserControl x:Class="BillsManager.View.Controls.ControlBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:BillsManager.View.Controls"
             mc:Ignorable="d">
    
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/BillsManager.View;component/Dictionaries/Styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <Controls:MinimizeWindowButton  x:Name="btnMinimize"
                                        IsTabStop="False"
                                        Focusable="False" />
        <Controls:MaximizeWindowButton  x:Name="btnResize"
                                      IsTabStop="False"
                                      Focusable="False" />
        <Controls:CloseWindowButton  x:Name="btnClose"
                                     IsTabStop="False"
                                     Focusable="False" />
    </StackPanel>

</UserControl>

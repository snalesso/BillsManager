<UserControl x:Class="BillsManager.View.BillDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:BillsManager.ViewModel;assembly=BillsManager.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=ViewModel:BillViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Amount"
                   Grid.Column="1"
                   Grid.Row="1" />
        <TextBlock Text="{Binding Path=Amount, StringFormat=\{0:c\}}"
                   Grid.Column="3"
                   Grid.Row="1"
                   TextAlignment="Right" />

        <TextBlock Text="Supplier"
                   Grid.Column="1"
                   Grid.Row="3" />
        <TextBlock Text="{Binding Path=Supplier}"
                   Grid.Column="3"
                   Grid.Row="3" />

        <TextBlock Text="Code"
                   Grid.Column="1"
                   Grid.Row="5" />
        <TextBlock Text="{Binding Path=Code}"
                   Grid.Column="3"
                   Grid.Row="5" />

        <TextBlock Text="Payment state"
                   Grid.Column="1"
                   Grid.Row="7" />
        <StackPanel Orientation="Horizontal"
                    Grid.Column="3"
                    Grid.Row="7">
            <TextBlock Text="{Binding Path=PaymentDate, StringFormat=Paid on \{0:D\}}"
                       Visibility="{Binding Path=IsPaid, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock Text="Not paid"
                       Visibility="{Binding Path=IsNotPaid, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <TextBlock Text="Due date"
                   Grid.Column="1"
                   Grid.Row="9" />
        <TextBlock Grid.Column="3"
                   Grid.Row="9">
            <Run Text="{Binding Path=DueDate, StringFormat=\{0:D\}}" />
            <Run Text="{Binding Path=DuesIn, Mode=OneWay, StringFormat=(\{0\})}" />
        </TextBlock>

        <TextBlock Text="Release date"
                   Grid.Column="1"
                   Grid.Row="11" />
        <TextBlock Text="{Binding Path=ReleaseDate, StringFormat=\{0:D\}}"
                   Grid.Column="3"
                   Grid.Row="11" />

        <TextBlock Text="Registration date"
                   Grid.Column="1"
                   Grid.Row="13" />
        <TextBlock Text="{Binding Path=RegistrationDate, StringFormat=\{0:D\}}"
                   Grid.Column="3"
                   Grid.Row="13" />

        <TextBlock Text="Notes"
                   Grid.Column="1"
                   Grid.Row="15" />
        <TextBlock Text="{Binding Path=Notes}"
                   Grid.Column="3"
                   Grid.Row="15" />

        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Grid.Row="17"
                    HorizontalAlignment="Right">
            <Button Content="Edit"
                    Width="80" />
            <Button Content="Close"
                    Margin="8 0 0 0"
                    Width="80" />
        </StackPanel>

    </Grid>
</UserControl>

<UserControl x:Class="BillsManager.Views.BillDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModel="clr-namespace:BillsManager.ViewModels;assembly=BillsManager.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:loc="clr-namespace:BillsManager.Localization;assembly=BillsManager.Localization"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MinWidth="400"
             d:DataContext="{d:DesignInstance Type=ViewModel:BillDetailsViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="Dictionaries\Styles.xaml" />
    </UserControl.Resources>

    <UserControl.Background>
        <Binding Mode="OneTime"
                 Source="{StaticResource ViewBackgroundBrush}" />
    </UserControl.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource MarginSize}" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="{StaticResource MarginSize}" />
            <ColumnDefinition />
            <ColumnDefinition Width="{StaticResource MarginSize}" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate Amount}" />
        <TextBlock Grid.Row="1"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Text="{Binding Amount, StringFormat=\{0:N2\} €}"
                   TextAlignment="Right" />

        <TextBlock Grid.Row="3"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate Supplier}" />
        <TextBlock Grid.Row="3"
                   Grid.Column="3"
                   VerticalAlignment="Center"
                   Text="{Binding SupplierName}" />

        <TextBlock Grid.Row="5"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate Number}" />
        <TextBlock Grid.Row="5"
                   Grid.Column="3"
                   VerticalAlignment="Center"
                   Text="{Binding Code}" />

        <TextBlock Grid.Row="7"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate Payment}" />
        <StackPanel Grid.Row="7"
                    Grid.Column="3"
                    Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center"
                       Text="{loc:Translate Paid_toBill}"
                       Visibility="{Binding IsPaid, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock VerticalAlignment="Center"
                       Text="{Binding PaymentDate, StringFormat=' \{0:D\}'}"
                       Visibility="{Binding IsPaid, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock Text="{loc:Translate NotPaid_toBill}"
                       Visibility="{Binding IsNotPaid, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <TextBlock Grid.Row="9"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate DuesOn}" />
        <TextBlock Grid.Row="9"
                   Grid.Column="3"
                   VerticalAlignment="Center">
            <Run Text="{Binding DueDate, StringFormat=\{0:D\}, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />
            <Run Text="{Binding DuesIn, Mode=OneWay, StringFormat=({0}), ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />
        </TextBlock>

        <TextBlock Grid.Row="11"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate ReleasedOn_toBill}" />
        <TextBlock Grid.Row="11"
                   Grid.Column="3"
                   VerticalAlignment="Center"
                   Text="{Binding ReleaseDate, StringFormat=\{0:D\}, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />

        <TextBlock Grid.Row="13"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate RegisteredOn_toBill}" />
        <TextBlock Grid.Row="13"
                   Grid.Column="3"
                   VerticalAlignment="Center"
                   Text="{Binding RegistrationDate, StringFormat=\{0:D\}, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />

        <TextBlock Grid.Row="15"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}"
                   Text="{loc:Translate Notes}" />
        <TextBlock Grid.Row="15"
                   Grid.Column="3"
                   MaxWidth="390"
                   VerticalAlignment="Center"
                   Text="{Binding Notes}"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="Wrap" />

        <StackPanel Grid.Row="17"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button MinWidth="80"
                    Command="{Binding SwitchToEditCommand, Mode=OneTime}"
                    Content="{loc:Translate Edit}"
                    IsDefault="True">
                <Button.Margin>
                    <Thickness Right="{StaticResource MarginSizeValue}" />
                </Button.Margin>
            </Button>
            <Button MinWidth="80"
                    Command="{Binding CloseDetailsViewCommand, Mode=OneTime}"
                    Content="{loc:Translate Close}"
                    IsCancel="True" />
        </StackPanel>

    </Grid>
</UserControl>
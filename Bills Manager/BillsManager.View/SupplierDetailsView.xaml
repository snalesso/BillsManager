<UserControl x:Class="BillsManager.Views.SupplierDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:BillsManager.ViewModels;assembly=BillsManager.ViewModels"
             mc:Ignorable="d"
             MinWidth="400"
             d:DataContext="{d:DesignInstance Type=ViewModel:SupplierDetailsViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary Source="Dictionaries\Styles.xaml" />
    </UserControl.Resources>

    <UserControl.Background>
        <Binding Mode="OneTime"
                 Source="{StaticResource ViewBackgroundBrush}" />
    </UserControl.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="{StaticResource MarginSize}" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Text="{Binding Path=Name}"
                   Grid.Column="2"
                   TextAlignment="Right"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left" />

        <TextBlock Text="Address"
                   Grid.Row="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Text="{Binding FullAddress}"
                   Grid.Column="2"
                   Grid.Row="2"
                   VerticalAlignment="Center" />

        <TextBlock Text="Obligation"
                   Grid.Row="4"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Grid.Column="2"
                   Grid.Row="4"
                   VerticalAlignment="Center">
            <Run Text="{Binding ObligationState, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            <Run Text="  " />
            <Run Text="{Binding ObligationAmount, StringFormat=\{0:N2\} €, UpdateSourceTrigger=PropertyChanged}" />
        </TextBlock>

        <TextBlock Grid.Row="6"
                   Text="Agent"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Grid.Column="2"
                   Grid.Row="6"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center">
            <Run Text="{Binding AgentName}" />
            <Run Text="{Binding AgentSurname}" />
        </TextBlock>

        <TextBlock Grid.Row="8"
                   Text="Agent phone"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Grid.Column="2"
                   Grid.Row="8"
                   Text="{Binding AgentPhone}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />

        <TextBlock Text="Phone"
                   Grid.Row="10"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Grid.Column="2"
                   Grid.Row="10"
                   Text="{Binding Phone}"
                   VerticalAlignment="Center" />

        <TextBlock Text="Fax"
                   Grid.Row="12"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Grid.Column="2"
                   Grid.Row="12"
                   Text="{Binding Fax}"
                   VerticalAlignment="Center" />

        <TextBlock Text="eMail"
                   Grid.Row="14"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Text="{Binding eMail}"
                   Grid.Column="2"
                   Grid.Row="14"
                   VerticalAlignment="Center" />

        <TextBlock Text="Website"
                   Grid.Row="16"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Text="{Binding Website}"
                   Grid.Column="2"
                   Grid.Row="16"
                   VerticalAlignment="Center" />

        <TextBlock Text="Notes"
                   Grid.Row="18"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontWeight="Medium"
                   Foreground="{StaticResource ViewTitleBrush}" />
        <TextBlock Text="{Binding Notes}"
                   Grid.Column="2"
                   Grid.Row="18"
                   TextWrapping="Wrap"
                   TextTrimming="CharacterEllipsis"
                   VerticalAlignment="Center"
                   MaxWidth="390" />

        <StackPanel Orientation="Horizontal"
                    Grid.ColumnSpan="3"
                    Grid.Row="20"
                    HorizontalAlignment="Right">

            <Button Content="Edit"
                    MinWidth="80"
                    Command="{Binding SwitchToEditCommand, Mode=OneTime}"
                    IsDefault="True">
                <Button.Margin>
                    <Thickness Right="{StaticResource MarginSizeValue}" />
                </Button.Margin>
            </Button>

            <Button Content="Close"
                    MinWidth="80"
                    Command="{Binding CloseDetailsViewCommand, Mode=OneTime}"
                    IsCancel="True" />

        </StackPanel>

    </Grid>
</UserControl>
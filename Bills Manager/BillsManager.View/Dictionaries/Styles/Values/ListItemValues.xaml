<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ViewValues.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Thickness x:Key="ListItemNormalBorderThickness"
               Bottom="0"
               Left="0"
               Right="0"
               Top="0" />

    <Thickness x:Key="ListItemSelectedBorderThickness"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <SolidColorBrush x:Key="ListItemSelectedBorderBrush"
                     Color="#FF6A6A6A" />

</ResourceDictionary>
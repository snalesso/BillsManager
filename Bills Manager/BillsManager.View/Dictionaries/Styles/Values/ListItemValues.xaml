<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ViewValues.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="RowColor1" Color="Transparent" />
    <!--
        beige           FFF8F8BE
        normal gray     FFEEEEEE
        uncle gray      FFE2E2E2
        darkest gray    FFD7D7D7
    -->
    <SolidColorBrush x:Key="RowColor2" Color="#FFEEEEEE" />

    <Thickness x:Key="ListItemNormalBorderThickness"
               Bottom="0"
               Left="0"
               Right="0"
               Top="0" />

    <Thickness x:Key="ListItemSelectedBorderThickness"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <SolidColorBrush x:Key="ListItemSelectedBorderBrush" Color="#FF6A6A6A" />
    <!--
        normal blue     FFDBE7F4
        uncle blue      FFCBDCEF
        darkest blue    FFBDD3EC
    -->
    <SolidColorBrush x:Key="ListItemMouseOverBrush" Color="#FFC6DBF0" />

</ResourceDictionary>
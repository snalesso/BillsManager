<UserControl x:Class="BillsManager.Views.SendFeedbackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="clr-namespace:BillsManager.Localization;assembly=BillsManager.Localization"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="300"
             MinHeight="200"
             MinWidth="400">

    <UserControl.Resources>
        <ResourceDictionary Source="/BillsManager.Views;component/Dictionaries/Styles.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource MarginSize}" />
            <ColumnDefinition Width="Auto"
                              MinWidth="75" />
            <ColumnDefinition Width="{StaticResource MarginSize}" />
            <ColumnDefinition />
            <ColumnDefinition Width="{StaticResource MarginSize}" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition />
            <RowDefinition Height="{StaticResource MarginSize}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{StaticResource MarginSize}" />
        </Grid.RowDefinitions>

        <TextBlock Text="{loc:Translate Subject}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Grid.Column="1"
                   Grid.Row="1" />
        <TextBox Text="{Binding Subject, UpdateSourceTrigger=PropertyChanged}"
                 MaxLines="1"
                 Grid.Column="3"
                 Grid.Row="1" />

        <TextBlock Grid.Row="3"
                   Text="{loc:Translate Message}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Grid.Column="1" />
        <TextBox Grid.Row="3"
                 Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Column="3"
                 AcceptsTab="True"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.ColumnSpan="3"
                    Grid.Column="1">

            <CheckBox Content="{loc:Translate CloseAfterSend}"
                      VerticalAlignment="Center"
                      IsChecked="{Binding CloseAfterSend}">
                <CheckBox.Margin>
                    <Thickness Right="{StaticResource MarginSizeValue}" />
                </CheckBox.Margin>
            </CheckBox>

            <Button Content="{loc:Translate SendFeedback}"
                    MinWidth="80"
                    Command="{Binding SendFeedbackCommand}">
                <Button.Margin>
                    <Thickness Right="{StaticResource MarginSizeValue}" />
                </Button.Margin>
            </Button>

            <Button Content="{loc:Translate Cancel}"
                    MinWidth="80"
                    Command="{Binding CancelCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
